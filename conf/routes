# - - - - - - - - HELLO WORLD ACTOR QUERY - - - - - - - -

###
#  summary: Hello World Actor Query
#  tags:
#    - public
#  parameters:
#    - in: path
#      name: Query
#      schema:
#         type: String
#      required: true
#      description: Query
#  responses:
#     '200':
#       description: Response
#     '404':
#       description: publicMetric not Found
#     '500':
#       description: InternalServerError
###
GET                 /v1/public/helloworld/:query                       de.innfactory.bootstrapplay2.actorsystem.controllers.ActorHelloWorldController.helloWorldActor(query: String)

